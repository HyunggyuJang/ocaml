{
    "name": "ocaml",
    "version": "5.2.0",
    "esy": {
        "build": [
            "./configure --prefix $cur__install",
            "make -j4",
            "make install"
        ],
        "buildsInSource": true,
        "exportedEnv": {
            "OCAMLLIB": {
                "val": "#{ocaml.lib / 'ocaml'}",
                "scope": "global"
            },
            "CAML_LD_LIBRARY_PATH": {
                "val": "#{ocaml.lib / 'ocaml' / 'stublibs' : ocaml.lib / 'ocaml' : $CAML_LD_LIBRARY_PATH}",
                "scope": "global"
            },
            "OCAML_TOPLEVEL_PATH": {
                "val": "#{ocaml.lib / 'ocaml'}",
                "scope": "global"
            }
        }
    }
}
